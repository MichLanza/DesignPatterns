<div class="row">
    <div class="col-8 offset-2">
        <div class="form-group">
            <select id="optionFile" class="form-control">
                <option value="">Selecione o tipo de arquivo</option>
                <option value="1">JSON</option>
                <option value="2">PIPE</option>
            </select>
        </div>
        <div class="form-group">
            <button class="btn btn-success" onclick="generate();">GENERAR</button>
        </div>
    </div>

</div>

<script>
    function generate(){
        let option = document.getElementById("optionFile").value;
        if(option == ""){
            alert('Selecione el formato');
            return;
        }
        fetch("@Url.Content("~/GeneratorFile/CreateFile")"+"?optionFile="+option)
        .then(res=> res.json()
        .then(data=> {
                alert(data);
        }));
    }
</script>